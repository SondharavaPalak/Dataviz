# Backend Environment Variables
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration (choose one)
# For local development (SQLite - no DATABASE_URL needed)
# For Docker/Production (PostgreSQL)
DATABASE_URL=postgresql://sem4_user:sem4_password@db:5432/sem4_db

# Redis Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Django Security
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Configuration
JWT_EXPIRATION_HOURS=24

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:8000/api
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_DB=sem4_db
POSTGRES_USER=sem4_user
POSTGRES_PASSWORD=sem4_password

# Timezone
TIMEZONE=UTC
